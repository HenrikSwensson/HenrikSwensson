using System;

namespace Uppgift2
{
    /*
     * Tänk på att samarbete mellan studenter eller ta hjälp av någon annan är förbjudet.
     * Inlämnade lösningar skall vara egenhändigt framtagna.
     */
    class Program
    {
        public static void Main()
        {
            int a = 2; /*a = 2 */
            for (int i = 0; i < 6; i++)
            {
                a = EttVarv(i, a);
            }
        }

        public static int EttVarv(int i, int a) /* int */
        {
            Console.WriteLine("Varv {0}. a == {1}; a = i * a + a.",
                              i, a);
            return a * a;
        }
    }
}/* }*/
